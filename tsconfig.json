{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* ─────── AÑADE estas dos líneas ─────── */
    "baseUrl": ".",               // raíz del proyecto
    "paths": {
      "@/*": ["src/*"],           // alias principal
      "@components/*": ["src/components/*"]   // (opcional) alias directo
    },
    /* ────────────────────────────────────── */

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",                   // cubre todo tu código
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
